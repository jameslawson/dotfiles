;
; ----------------------------------------------------------
; -- DEPENDENCIES
; ----------------------------------------------------------
; [*]: Requires v2.6.3+ of git
; [1]: Requires SourceTree:
;      https://www.sourcetreeapp.com/
;
; [http]
; 	proxy = http://blah.blah.blah:1234
; [https]
; 	proxy = https://blah.blah.blah:1234
[user]
	name = James Lawson
	email = jameslawson@users.noreply.github.com
[core]
	editor = vim
	excludesfile = /Users/james/.gitignore_global
	hooksPath = /Users/james/.git-templates/hooks
[alias]
	st = status
	ci = commit
	co = checkout
	s = status -s
	lg = log --oneline --decorate --all --graph
	d = difftool
	ci = commit
	ci = commit
	ci = commit
	ci = commit

; Depends on [1]
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
; Depends on [1]
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[url "https://"]
	insteadOf = git://
; [pull]
; 	rebase = true
[push]
	default = simple
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
